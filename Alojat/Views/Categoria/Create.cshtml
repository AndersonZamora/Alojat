@model Alojat.Models.Categoria
@{
    Layout = "~/Views/Shared/_LayoutAlojat.cshtml";
}

<div class="card o-hidden border-0 shadow-lg">
    <div class="card-body p-0">
        <div class="row">
            <div class="col-lg-12">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-1">Crear categoria</h1>
                    </div>
                    <form class="user" asp-action="Create">
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <label asp-for="NombreCategoria" class="control-label"></label>
                                <input asp-for="NombreCategoria" class="form-control" />
                                <p><strong style="color:red; font-size:14px">@Html.ValidationMessage("Categ")</strong></p>
                                <input type="submit" value="Crear" class="btn btn-primary btn-user btn-block mt-4"/>
                            </div>

                        </div>
                        <hr>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>